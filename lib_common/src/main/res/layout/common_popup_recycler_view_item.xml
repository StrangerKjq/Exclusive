<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.kjq.common.ui.designs.popMenu.FreedomItemVM" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            app:onClickCommand="@{viewModel.baseClick}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="文本内容"
            android:textColor="@color/common_s_text_color_black_primary_pressed"
            android:text="@{viewModel.mEntity.mS_txt}"/>
    </LinearLayout>
</layout>
