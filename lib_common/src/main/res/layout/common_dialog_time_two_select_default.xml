<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/common_control_colorBg">

        <TextView
            android:id="@+id/dTTSDefault_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="选择时间"/>

        <Space
            android:layout_height="16dp"
            android:layout_width="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center|start"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="开始时间"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <NumberPicker
                android:id="@+id/dTTSDefault_one_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/dTTSDefault_one_hour_hint"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="时"/>
            <NumberPicker
                android:id="@+id/dTTSDefault_one_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dTTSDefault_one_minute_hint"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="分"/>
        </LinearLayout>

        <Space
            android:layout_height="16dp"
            android:layout_width="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center|start"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="结束时间"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <NumberPicker
                android:id="@+id/dTTSDefault_two_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/dTTSDefault_two_hour_hint"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="时"/>
            <NumberPicker
                android:id="@+id/dTTSDefault_two_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/dTTSDefault_two_minute_hint"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="分"/>
        </LinearLayout>

        <Space
            android:layout_height="16dp"
            android:layout_width="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center">
            <TextView
                android:id="@+id/dTTSDefault_no"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="取消"/>
            <TextView
                android:id="@+id/dTTSDefault_ok"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="确定"/>
        </LinearLayout>

        <Space
            android:layout_height="16dp"
            android:layout_width="16dp" />

    </LinearLayout>
</layout>
