<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="titleTxt"
            type="String"/>
        <variable
            name="hintTxt"
            type="String"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dValue_tView_title"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="@{titleTxt}"
            tools:text="提示标题"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/dValue_tView_hint"
            app:layout_constraintTop_toBottomOf="@id/dValue_tView_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="64dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text="@{hintTxt}"
            tools:text="提示的内容"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/dValue_tText_valueHint"
            app:layout_constraintTop_toBottomOf="@id/dValue_tView_hint"
            app:layout_constraintBottom_toBottomOf="@id/dValue_eText_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/dValue_eText_value"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            tools:text="值的提示"/>

        <EditText
            android:id="@+id/dValue_eText_value"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:layout_constraintTop_toBottomOf="@id/dValue_tView_hint"
            app:layout_constraintStart_toEndOf="@id/dValue_tText_valueHint"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:maxLength="20"
            android:hint="@{hintTxt}"
            tools:hint="提示文本"/>

        <include
            android:id="@+id/dValue_wire_bottom"
            app:layout_constraintTop_toBottomOf="@id/dValue_eText_value"
            layout="@layout/designs_include_wire"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/dValue_tView_ok"
            app:layout_constraintTop_toBottomOf="@id/dValue_wire_bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/dValue_tView_no"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text="确定"/>

        <include
            app:layout_constraintTop_toTopOf="@id/dValue_tView_ok"
            app:layout_constraintLeft_toRightOf="@id/dValue_tView_ok"
            app:layout_constraintRight_toLeftOf="@id/dValue_tView_no"
            layout="@layout/designs_include_wire"
            android:layout_width="1dp"
            android:layout_height="48dp"/>

        <TextView
            android:id="@+id/dValue_tView_no"
            app:layout_constraintTop_toTopOf="@id/dValue_tView_ok"
            app:layout_constraintLeft_toRightOf="@id/dValue_tView_ok"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text="取消"/>

        <include
            app:layout_constraintBottom_toBottomOf="@id/dValue_tView_ok"
            layout="@layout/designs_include_wire"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
