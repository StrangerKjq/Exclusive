<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testingFunctions.SocketTestActivity"
    android:layout_marginTop="64dp">

    <TextView
        android:id="@+id/aDebug_hint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="发送内容：\n 0：“UDP模式下的查询SSID。”\n 1：“UDP模式下的发送SSID。”\n 2：“UDP模式下的发送密码。” \n其他均是填写什么发送什么。"/>

    <Switch
        android:id="@+id/aDebug_select"
        app:layout_constraintTop_toBottomOf="@id/aDebug_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开是TCP,关闭是UDP。"/>

    <LinearLayout
        android:id="@+id/aDebug_ipAndPort"
        app:layout_constraintTop_toBottomOf="@+id/aDebug_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/aDebug_texV_ip"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="目标IP"/>
        <EditText
            android:id="@+id/aDebug_ip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"/>
        <TextView
            android:id="@+id/aDebug_texV_port"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="目标端口"/>
        <EditText
            android:id="@+id/aDebug_port"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/aDebug_texV_sendType"
        app:layout_constraintTop_toBottomOf="@id/aDebug_ipAndPort"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/aDebug_sendType"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="发送内容"/>

    <EditText
        app:layout_constraintTop_toTopOf="@id/aDebug_texV_sendType"
        app:layout_constraintLeft_toRightOf="@id/aDebug_texV_sendType"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/aDebug_sendType"
        android:layout_width="0dp"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/aDebug_lianJieWifi"
        app:layout_constraintTop_toBottomOf="@id/aDebug_texV_sendType"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/aDebug_send"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="UDP模式下连接模块的wifi"/>

    <Button
        android:id="@+id/aDebug_send"
        app:layout_constraintTop_toTopOf="@id/aDebug_lianJieWifi"
        app:layout_constraintLeft_toRightOf="@id/aDebug_lianJieWifi"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="发送内容"/>
    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/aDebug_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/aDebug_content"
                android:paddingBottom="48dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="接受的信息"/>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>