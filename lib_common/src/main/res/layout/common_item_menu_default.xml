<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="onClick"
            type="android.view.View.OnClickListener"/>
        <variable
            name="data"
            type="com.kjq.common.ui.designs.popMenu.PopMenuModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/designs_iMDefault_rootView"
        android:onClick="@{onClick}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/common_control_white">

        <ImageView
            android:visibility="gone"
            android:id="@+id/designs_iMDefault_sign"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/designs_iMDefault_txt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/designs_iMDefault_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="@{onClick}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:maxLines="1"
            android:textColor="@color/common_s_text_color_black_primary_pressed"
            android:text="@{data.s_menuTxt}"
            android:textSize="16sp"
            tools:text="菜单项"/>

        <View
            android:id="@+id/common_iMDefault_wire"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="#DDDDDD"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
